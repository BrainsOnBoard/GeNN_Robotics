    CXXFLAGS += -DRECORD_ELECTROPHYS
endif

ifdef RECORD_SENSORS
    CXXFLAGS += -DRECORD_SENSORS
endif

ifdef USE_SEE3_CAM
    CXXFLAGS += -DUSE_SEE3_CAM
endif

include $(GENN_PATH)/userproject/include/makefile_common_gnu.mk
